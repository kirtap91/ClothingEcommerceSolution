<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (FeaturedProductList!.Any())
            {
                <div class="control-container text-dark">
                    <SfCarousel ButtonsVisibility="CarouselButtonVisibility.VisibleOnHover"
                                AnimationEffect="CarouselAnimationEffect.Slide"
                                AutoPlay="true"
                                ShowIndicators="true">
                        <ChildContent>
                            @foreach (Product product in FeaturedProductList!.OrderByDescending(_ => _.DateUploaded).Take(5)!)
                            {
                                <CarouselItem>
                                    <figure class="img-container">
                                        <img src="@product.Base64Img" class="float-end" />
                                    </figure>
                                    <div class="d-flex justify-content-center">
                                        <div class="text-container">
                                            <div class="vstack gap-3 mb-3">
                                                <div>
                                                    <p>
                                                        <span class="text-dark fw-bold display-2">
                                                            @product.Name
                                                            <sup>
                                                                <span class="badge rounded-pill bg alert-primary fs-6">@GetNewLabel(product.DateUploaded))</span>
                                                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                                    @((product.Quantity - 1) > 0 ? $"{product.Quantity - 1}+" : product.Quantity)
                                                                </span>
                                                            </sup>
                                                        </span>
                                                    </p>
                                                </div>
                                            </div>
                                            <p class="text-muted fs-5 w-75">@GetDescription(product.Description)</p>
                                        </div>
                                        <div class="button-group d-flex justify-content-center">
                                            <button class="btn btn-secondary" id="styleButton"><i class="fa fa-list"></i> Details</button>
                                            <button class="btn btn-outline-danger" id="styleButton"><i class="fa fa-cart-plus"></i> BUY NOW</button>
                                        </div>
                                    </div>
                                </CarouselItem>
                            }
                        </ChildContent>
                        <PreviousButtonTemplate>
                            <button class="btn icon-button">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                        </PreviousButtonTemplate>
                        <NextButtonTemplate>
                            <button class="btn icon-button">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </NextButtonTemplate>

                        <IndicatorsTemplate>
                            <div class="indicator"></div>
                        </IndicatorsTemplate>
                    </SfCarousel>
                </div>
            }
            else
            {
                <div class="alert alert-info">No product available</div>
            }
        </div>
    </div>
</div>

<style>
    
</style>

@code {
    List<Product>? FeaturedProductList = new();

    private async Task RetrieveFeaturedProducts()
    {
        FeaturedProductList?.Clear();
        bool featured = true;
        var results = await ClientService.GetAllProducts(featured);
        if (results is null) return;

        foreach (var i in results)
            FeaturedProductList!.Add(i);
    }

    string GetNewLabel(DateTime dateUploaded)
    {
        int maxDays = 30;
        int productDateAfterUploaded = (DateTime.Now - dateUploaded).Days;
        return productDateAfterUploaded <= maxDays ? "New" : null!;
    }

    string GetDescription(string description)
    {
        string appendDots = "...";
        int maxLength = 40;
        int descriptionLength = description.Length;
        return descriptionLength > maxLength ? $"{description.Substring(0, 40)}{appendDots}" : description;
    }
}
