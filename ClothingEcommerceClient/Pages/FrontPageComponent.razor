    public static string GetNewLabel(DateTime dateUploaded)
    {
        const int maxDays = 30;
        int daysSinceUploaded = (DateTime.Now - dateUploaded).Days;
        return daysSinceUploaded <= maxDays ? "New" : null!;
    }

    public static string GetDescription(string description)
    {
        const string appendDots = "...";
        const int maxLength = 100;
        return description.Length > maxLength ? $"{description.Substring(0, maxLength)}{appendDots}" : description;
    }
